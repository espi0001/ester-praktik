<style>
  @layer components {
    footer {
      background-color: var(--color_black);
      padding: 80px 36px;
      align-items: center;
    }

    .content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 30px;
      margin-bottom: 64px;
      /* margin-top: 32px; */
    }
    .logo {
      max-width: 55px;
      height: auto;
    }
    .sociale_links {
      display: flex;
      gap: 12px;
      align-items: center;
      justify-content: center;
    }
    .sociale_links a {
      background-color: var(--sort);
      border-radius: 50px;
      width: 30px;
      height: auto;
      font-size: var(--font_size_medium);
    }
    .sociale_links a:hover {
      background-color: var(--color_blue);
    }
    .links {
      display: flex;
      gap: 32px;
      text-decoration: none;
    }
    .links a {
      font-weight: bold;
    }

    .links a:hover {
      text-decoration: none;
      color: var(--color_blue);
    }
    hr {
      width: 100%;
      color: var(--color_white);
    }

    .credits {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 32px;
      margin-top: 32px;
      flex-direction: column-reverse;
    }

    .footer_links {
      display: flex;
      gap: 24px;
    }

    .credits a {
      text-decoration: underline 1px;
    }

    .credits a:hover {
      color: var(--color_blue);
    }
  }
</style>
